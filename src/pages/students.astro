---
// Layout.astro
import StuCard from "../components/StuCard.astro"; // 导入StuCard组件
---

<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>学生信息页面</title>
    <link rel="stylesheet" href="styles.css"> <!-- 引入CSS样式文件 -->
    <!-- 其他头部信息，如favicon等 -->
</head>
<body>
    <!-- 页面头部 -->
    <header>
        <h1>学生信息展示</h1>
        <nav>
            <!-- 导航链接 -->
            <!-- 这里可以添加导航链接或通过属性注入 -->
        </nav>
    </header>

    <!-- 页面主要内容区域 -->
    <main>
        <!-- 学生信息卡片组件区域 -->
        <section id="student-cards">
            <!-- 使用slot来预留内容注入的位置 -->
            <slot name="student-cards" />
        </section>
    </main>

    <!-- 页面底部 -->
    <footer>
        <p>版权所有 © 2024 学生信息页面</p>
    </footer>

    <!-- 引入Astro组件脚本，如果StuCard是客户端渲染的组件 -->
    <script type="module" src="/components/StuCard.astro"></script>
</body>
</html>