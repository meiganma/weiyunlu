---
// Navigation.astro
// 导航链接数组
const navLinks = [
  { text: '首页', href: '/' },
  { text: '产品', href: '/products' },
  { text: '服务', href: '/services' },
  { text: '关于', href: '/about' },
  { text: '联系', href: '/contact' }
];
---

<nav class="navigation">
  <ul class="nav-list">
    <!-- 使用 map 函数渲染导航链接 -->
    {navLinks.map(link => (
      <li class="nav-item">
        <a href={link.href} class="nav-link">{link.text}</a>
      </li>
    ))}
  </ul>
</nav>